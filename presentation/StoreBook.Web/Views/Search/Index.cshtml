@model Book[]

@{
    ViewData["Title"] = "Search Results";
}

<h1>Search Results:</h1>
@if (Model.Length == 0 || Model==null)
{
    <p>No results</p>
}
else
{
    <ul>
        @foreach(var book in Model)
        {
            <li><a href="@Url.Action("Index", "Book", new { id=book.Id})">@book.Title</a></li>
        }

    </ul>
}


