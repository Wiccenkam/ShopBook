@model DeliveryModel
@{ 
    ViewData["Title"] = "Way of Payment";
}
<h1>Way of Payment</h1>
<form action="@Url.Action("StartPayment")" method="post">
    <input type="hidden" name="id" value="@Model.OrderId"/>
    <div class="form-group">
        <label for="code">Way of Delivery:</label>
        <select class="form-control" name="uniqueCode">
            @foreach(var method in Model.Methods)
            {
                <option value="@method.Key">@method.Value</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-success">Next</button>
</form>
